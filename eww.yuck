(include "./widgets/clock.yuck")
(include "./widgets/media.yuck")
(include "./widgets/weather.yuck")
(include "./widgets/systray.yuck")

(defwidget parent []
 (centerbox :class "bar" :halign "fill"
   (box :class "left" :halign "start" :vexpand false
        )
   (box :class "middle" :halign "center" :vexpand false
        (media))
   (box :class "right" :halign "end" :vexpand false
        (weather)
        (clock)
        (systray-expander))))

(defwindow bar [monitor]
           :monitor { monitor }
           :geometry (geometry :x 0 :y 0 :width "100%" :height "4%" :anchor "top center")
           :stacking "fg"
           :exclusive true
           :focusable false
           (parent))

